
@model  category.modification.CategoryModel

@{
    ViewData["Title"] = "Edit Category Page";
}


<!DOCTYPE html>
<html>
<body>
    <div>
        @using(Html.BeginForm("EditCategory","Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.ValidationSummary()
            
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(cat=>cat.Name , new { @class="form-control", Placeholder=@Model.Name})
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(admin=>admin.Description, new { @class="form-control", Placeholder=@Model.Description})
            </div>
            
            <div>
                <img src ="@Url.Content("~/CategoryPhotos/" + Model.Photo + ".png")">
                <input type="file"  name="PhotoFile" />
            </div>
            
            <div>@ViewBag.Msg</div>
            
            <button type="submit" class="btn-primary">Edit</button>
        }
    </div>

</body>
</html>