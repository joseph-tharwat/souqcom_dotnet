
@model  category.modification.CategoryModel

@{
    ViewData["Title"] = "categories Page";
}


<!DOCTYPE html>
<html>
<body>
    <div>
        @using(Html.BeginForm("CreateCategory","Admin", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(cat=>cat.Name , new { @class="form-control", Placeholder=@Model.Name})
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(admin=>admin.Description, new { @class="form-control", Placeholder=@Model.Description})
            </div>
            
            @if(Model.ErrorMsg != "")
            {
                <div>@Model.ErrorMsg</div>
            }
            
            <button type="submit" class="btn-primary">Create</button>
        }
    </div>

</body>
</html>