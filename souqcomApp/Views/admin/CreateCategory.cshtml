
@model  category.modification.CategoryModel

@{
    ViewData["Title"] = "categories Page";
}


<!DOCTYPE html>
<html>
<body>
    <div>
        @*new {enctype = "multipart/form-data"} to receive the photo object  *@
        @using(Html.BeginForm("CreateCategory","Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(cat=>cat.Name , new { @class="form-control", Placeholder=@Model.Name})
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(cat=>cat.Description, new { @class="form-control", Placeholder=@Model.Description})
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="PhotoFile" />
            </div>
            
            <div>@ViewBag.Msg</div>
            
            <button type="submit" class="btn-primary">Create</button>
        }
    </div>

</body>
</html>