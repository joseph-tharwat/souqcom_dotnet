
@model  Items.modification.ItemModel

@{
    ViewData["Title"] = "Create Item=";
}


<!DOCTYPE html>
<html>
<body>
    <div>
        @*new {enctype = "multipart/form-data"} to receive the photo object  *@
        @using(Html.BeginForm("CreateItem","Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.ValidationSummary()

            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(item=>item.Name , new { @class="form-control", Placeholder=@Model.Name})
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(item=>item.Description, new { @class="form-control", Placeholder=@Model.Description})
            </div>
             <div class="form-group">
                <label>Price</label>
                @Html.TextBoxFor(item=>item.Price, new { @class="form-control", Placeholder=@Model.Price})
            </div>
            <div class="form-group">
                <label>Category Name</label>
                @Html.DropDownListFor(item=>item.CategoryId, Model.CategoriesId,  new { @class="form-control"})
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="PhotoFile" />
            </div>
            
            <div>@ViewBag.Msg</div>
            
            <button type="submit" class="btn-primary">Create</button>
        }
    </div>

</body>
</html>